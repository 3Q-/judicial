body, html
  height: 100%
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif
body
  background-color: #fbf6e4
  // background: url('/big-data-web/static/images/background.jpeg') no-repeat center center
  background-position center center
  background-repeat: repeat
  background-size: cover
.clearfix
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden
